<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.project.watnet.user.UserMapper">
 	<insert id="insUser" useGeneratedKeys="true" keyProperty="userPk">
 		INSERT INTO t_user
 		( userId, userPw, userMail, nickname, pNum, profileImg, userPoint )
 		VALUES
 		( #{userId}, #{userPw}, #{userMail}, #{nickname}, #{pNum}, #{profileImg}, 1000)
 	</insert>
 	
 	<insert id="insUtils">
 		INSERT INTO t_utils
 		(pNum, tempPw)
 		VALUES
 		( #{pNum}, #{tempPw} )
 	</insert>
 
 	<select id="selUser" resultType="UserDomain">
 		SELECT * FROM t_user
 		WHERE userId = #{userId}
 	</select>
 	
 	<select id="selNickname" resultType="UserEntity">
 		SELECT * FROM t_user
 		WHERE nickname = #{nickname}
 	</select>
 	
 	<select id="selPNum" resultType="UserEntity">
 		SELECT * FROM t_user
 		WHERE pNum = #{pNum}
 	</select>
 	
 	<select id="selUtils" resultType="UtilsEntity">
 		SELECT * FROM t_utils
 		WHERE tempPw = #{tempPw}
 	</select>
 	
 	<update id="updPw">
 		UPDATE t_user
 		SET userPw = #{userPw}
 		WHERE userPk = #{userPk}
 	</update>
 	
 	<update id="updPoint">
 		UPDATE t_user
 		SET userPoint = userPoint+ #{modPoint}
 		WHERE userId = #{userId}
 	</update>
 	
 	<delete id="delUtils">
 		DELETE FROM t_utils
 		WHERE tempPw = #{tempPw}
 	</delete>
 	
 </mapper>